{
  "name": "codenotes",
  "displayName": "CodeNotes",
  "description": "Easily find your notes in vscode, so you don't forget!",
  "version": "0.0.1",
  "publisher": "kasp416h",
  "repository": {
    "type": "git",
    "url": "https://github.com/kasp416h/CodeNotesExtension.git"
  },
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:codenotes.notesView"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codenotes",
          "title": "CodeNotes",
          "icon": "resources/notes-icon.png"
        }
      ]
    },
    "views": {
      "codenotes": [
        {
          "id": "notesView",
          "name": "Notes"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "CodeNotes Configuration",
      "properties": {
        "codenotes.firebaseApiKey": {
          "type": "string",
          "default": "",
          "description": "Firebase API Key"
        },
        "codenotes.firebaseAuthDomain": {
          "type": "string",
          "default": "",
          "description": "Firebase Auth Domain"
        },
        "codenotes.firebaseProjectId": {
          "type": "string",
          "default": "",
          "description": "Firebase Project ID"
        },
        "codenotes.firebaseStorageBucket": {
          "type": "string",
          "default": "",
          "description": "Firebase Storage Bucket"
        },
        "codenotes.firebaseMessagingSenderId": {
          "type": "string",
          "default": "",
          "description": "Firebase Messaging Sender ID"
        },
        "codenotes.firebaseAppId": {
          "type": "string",
          "default": "",
          "description": "Firebase App ID"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "yarn run check-types && yarn run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "yarn run check-types && yarn run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "20.x",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "esbuild": "^0.21.5",
    "eslint": "^8.57.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "firebase": "^10.12.2"
  }
}
